import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        String H;
        String L;
        System.out.println("What kind of animal do you have?");
        H = sc.next();
        System.out.println( "The " + H + " is a cool animal.");
        System.out.println("What color is " + H + "?");
        L = sc.next();
        System.out.println("So the animal " + H + " is the color " + L + ".");
    }
}
